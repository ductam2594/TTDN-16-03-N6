<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_van_ban_di_form" model="ir.ui.view">
            <field name="name">van_ban_di.form</field>
            <field name="model">van_ban_di</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="action_draft" string="Nháp" type="object" 
                                attrs="{'invisible': [('state', '!=', 'pending')]}" 
                                class="oe_highlight"/>
                        <button name="action_pending" string="Gửi duyệt" type="object" 
                                attrs="{'invisible': [('state', 'not in', ['draft', 'cancelled'])]}" 
                                class="oe_highlight"/>
                        <button name="action_approve" string="Duyệt" type="object" 
                                attrs="{'invisible': [('state', '!=', 'pending')]}" 
                                class="oe_highlight"/>
                        <button name="action_send" string="Gửi" type="object" 
                                attrs="{'invisible': [('state', '!=', 'approved')]}" 
                                class="oe_highlight"/>
                        <button name="action_cancel" string="Hủy" type="object" 
                                attrs="{'invisible': [('state', 'in', ['cancelled', 'sent'])]}"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,pending,approved,sent"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="ten_van_ban" placeholder="Tên văn bản..."/>
                            </h1>
                        </div>
                        <group>
                            <group string="Thông tin chung" col="2">
                                <field name="so_van_ban_di"/>
                                <field name="so_hieu_van_ban"/>
                                <field name="loai_van_ban_id"/>
                                <field name="noi_nhan"/>
                            </group>
                            <group string="Ngày tháng" col="2">
                                <field name="ngay_gui"/>
                                <field name="ngay_ky"/>
                            </group>
                        </group>
                        <group>
                            <group string="Nhân viên liên quan" col="2">
                                <field name="nhan_vien_soan_thao_id"/>
                                <field name="nhan_vien_ky_id"/>
                                <field name="nhan_vien_phoi_hop_ids" widget="many2many_tags" colspan="2"/>
                            </group>
                        </group>
                        <group string="Mô tả">
                            <field name="mo_ta" placeholder="Mô tả nội dung văn bản..."/>
                        </group>
                        <group string="Ghi chú">
                            <field name="ghi_chu" placeholder="Ghi chú..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_van_ban_di_tree" model="ir.ui.view">
            <field name="name">van_ban_di.tree</field>
            <field name="model">van_ban_di</field>
            <field name="arch" type="xml">
                <tree decoration-info="state == 'new'" 
                      decoration-muted="state == 'cancelled'"
                      decoration-success="state == 'sent'">
                    <field name="so_van_ban_di"/>
                    <field name="ten_van_ban"/>
                    <field name="loai_van_ban_id"/>
                    <field name="ngay_gui"/>
                    <field name="nhan_vien_ky_id"/>
                    <field name="noi_nhan"/>
                    <field name="state" widget="badge" 
                           decoration-info="state == 'draft' or state == 'pending'"
                           decoration-warning="state == 'approved'"
                           decoration-success="state == 'sent'"
                           decoration-danger="state == 'cancelled'"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="van_ban_di_search">
            <field name="model">van_ban_di</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ten_van_ban"/>
                    <field name="so_van_ban_di"/>
                    <field name="so_hieu_van_ban"/>
                    <field name="noi_nhan"/>
                    <field name="nhan_vien_soan_thao_id"/>
                    <field name="nhan_vien_ky_id"/>
                    <field name="loai_van_ban_id"/>
                    <filter string="Nháp" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Chờ duyệt" name="pending" domain="[('state', '=', 'pending')]"/>
                    <filter string="Đã duyệt" name="approved" domain="[('state', '=', 'approved')]"/>
                    <filter string="Đã gửi" name="sent" domain="[('state', '=', 'sent')]"/>
                    <separator/>
                    <filter string="Tháng này" name="this_month" 
                            domain="[('ngay_gui', '&gt;=', (context_today().replace(day=1)).strftime('%Y-%m-%d')), ('ngay_gui', '&lt;=', context_today().strftime('%Y-%m-%d'))]"/>
                </search>
            </field>
        </record>

        <record id="action_van_ban_di" model="ir.actions.act_window">
            <field name="name">Văn bản đi</field>
            <field name="res_model">van_ban_di</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="van_ban_di_search"/>
            <field name="context">{'search_default_this_month': 1}</field>
        </record>
    </data>
</odoo>
        
    