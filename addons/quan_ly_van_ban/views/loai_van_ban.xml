<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_loai_van_ban_form" model="ir.ui.view">
            <field name="name">loai_van_ban.form</field>
            <field name="model">loai_van_ban</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="%(quan_ly_van_ban.action_van_ban_den)d" type="action" 
                                    class="oe_stat_button" icon="fa-file-text-o"
                                    context="{'search_default_loai_van_ban_id': active_id}">
                                <field name="van_ban_den_count" widget="statinfo" string="Văn bản đến"/>
                            </button>
                            <button name="%(quan_ly_van_ban.action_van_ban_di)d" type="action" 
                                    class="oe_stat_button" icon="fa-file-text-o"
                                    context="{'search_default_loai_van_ban_id': active_id}">
                                <field name="van_ban_di_count" widget="statinfo" string="Văn bản đi"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="ten_loai_van_ban" placeholder="Tên loại văn bản..."/>
                            </h1>
                        </div>
                        <group>
                            <group string="Thông tin chung" col="2">
                                <field name="ma_loai_van_ban"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <group string="Mô tả">
                            <field name="mo_ta" placeholder="Mô tả chi tiết về loại văn bản này..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_loai_van_ban_tree" model="ir.ui.view">
            <field name="name">loai_van_ban.tree</field>
            <field name="model">loai_van_ban</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ma_loai_van_ban"/>
                    <field name="ten_loai_van_ban"/>
                    <field name="van_ban_den_count"/>
                    <field name="van_ban_di_count"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="loai_van_ban_search">
            <field name="model">loai_van_ban</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ma_loai_van_ban"/>
                    <field name="ten_loai_van_ban"/>
                    <filter string="Đang kích hoạt" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Đã vô hiệu" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <record id="action_loai_van_ban" model="ir.actions.act_window">
            <field name="name">Loại văn bản</field>
            <field name="res_model">loai_van_ban</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="loai_van_ban_search"/>
            <field name="context">{'search_default_active': 1}</field>
        </record>
    </data>
</odoo>
        
    