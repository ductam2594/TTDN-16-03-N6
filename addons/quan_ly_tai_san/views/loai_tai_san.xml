<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_loai_tai_san_tree" model="ir.ui.view">
        <field name="name">loai_tai_san.tree</field>
        <field name="model">loai_tai_san</field>
        <field name="arch" type="xml">
            <tree string="Loại Tài sản">
                <field name="ma_loai"/>
                <field name="ten_loai"/>
                <field name="thoi_gian_khau_hao"/>
                <field name="ty_le_khau_hao"/>
                <field name="so_luong_tai_san"/>
            </tree>
        </field>
    </record>

    <record id="view_loai_tai_san_form" model="ir.ui.view">
        <field name="name">loai_tai_san.form</field>
        <field name="model">loai_tai_san</field>
        <field name="arch" type="xml">
            <form string="Loại Tài sản">
                <header>
                    <button name="%(quan_ly_tai_san.action_tai_san)d" type="action" string="Xem Tài sản" 
                            context="{'default_loai_tai_san_id': active_id, 'search_default_loai_tai_san_id': active_id}" 
                            class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="ma_loai"/>
                            <field name="ten_loai"/>
                            <field name="thoi_gian_khau_hao"/>
                            <field name="ty_le_khau_hao" readonly="1"/>
                        </group>
                        <group>
                            <field name="so_luong_tai_san" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Mô tả">
                            <field name="mo_ta" placeholder="Nhập mô tả về loại tài sản..."/>
                        </page>
                        <page string="Tài khoản Kế toán">
                            <group>
                                <field name="tai_khoan_tai_san_id"/>
                                <field name="tai_khoan_khau_hao_id"/>
                                <field name="tai_khoan_chi_phi_id"/>
                            </group>
                        </page>
                        <page string="Danh sách Tài sản">
                            <field name="tai_san_ids" nolabel="1">
                                <tree>
                                    <field name="ma_tai_san"/>
                                    <field name="ten_tai_san"/>
                                    <field name="gia_tri_nguyen_gia"/>
                                    <field name="trang_thai"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_loai_tai_san" model="ir.actions.act_window">
        <field name="name">Loại Tài sản</field>
        <field name="res_model">loai_tai_san</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo loại tài sản mới
            </p>
            <p>
                Phân loại tài sản theo loại để quản lý dễ dàng hơn.
            </p>
        </field>
    </record>
</odoo>


